.video-controller
        .video-controller__time-line
            input(id="timeLine" type="range" step="1" min="0" value="0" )
        .video-controller__buttons
            .video-controller__buttons-play   
                i(id="playPauseBtn" class="fas fa-play")
                i(id="volume" class="fas fa-volume-up" style="cursor: pointer; position: relative")
                input(type="range" step="0.1" value="0.5" min="0" max="1" id="volumeRange")
                .video-controller__time
                    span(id="currentTime") 00:00
                    span /
                    span(id="totalTime") 00:00
            .video-controller__screen
                i(class="fas fa-expand" id="fullScreenBtn")