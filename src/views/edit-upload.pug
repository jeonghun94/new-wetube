extends base.pug

block content
    form(method="POST" style="height:350px ! important").login__form
        h1 비디오 수정
        input(placeholder="제목", required, type="text", name="title", maxlength=80 value=video.title)
        input(placeholder="설명", required, type="text", name="description", minlength=3 value=video.description)
        input(placeholder="해시태그 ,구분", required, type="text", name="hashtags" value=video.hashtags.join().replaceAll("#", ""))
        button 수정

        if errorMessage
            .error-container 
                span=errorMessage
