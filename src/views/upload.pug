extends base.pug

block content
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn.social__btn Start Recording
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data" style="height:2200px").login__form
            h1 비디오 업로드
            input(type="file", accept="video/*", required, id="video", name="video")
            input(type="file", accept="image/*", required, id="thumb", name="thumb")
            input(placeholder="제목", required, type="text", name="title", maxlength=80)
            input(placeholder="상세 내용", required, type="text", name="description", minlength=20)
            input(placeholder="해시태그 콤마 구분", required, type="text", name="hashtags")
            button 업로드

block scripts
    script(src="/static/js/recorder.js") 